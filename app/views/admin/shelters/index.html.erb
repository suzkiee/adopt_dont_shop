<div class="content">
  <h1>All Shelters</h1>
  <% @shelters.each do |shelter| %>
    <h2><%= link_to "#{shelter.name}", "/admin/shelters/#{shelter.id}" %></h2>
  <% end %>

  <div class="statistics">  
    <h1>Shelters with Pending Applications</h1>
    <% @pending.each do |shelter| %>
      <p><%= shelter.name %></p>
    <% end %>
  </div>
</div>

